                <Button   Content="Авторизоваться" Click="Avtor" Margin="10 0 0 10"/>
                <Button  Content="Регистрация" Click="Registr"   Margin="70 0 0 10" />
            </StackPanel>
        </StackPanel>-->



    </Grid>

</Window>

