             <TextBlock HorizontalAlignment="Center">Введите Логин</TextBlock>
                <TextBox Margin="10 5 10 5" GotFocus="TextBox_GotFocus" x:Name="LoginTb"> Введите логин</TextBox>
                
            </StackPanel>
            <StackPanel>
             <TextBlock HorizontalAlignment="Center">Введите пароль</TextBlock>
                <PasswordBox Margin="10 5 10 5" x:Name="PasswordTb" ></PasswordBox>
                
